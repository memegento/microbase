<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
<!--  Default areas must be defined if we want to bootstrap the app  -->
    <type name="Magento\Framework\App\AreaList">
        <arguments>
            <argument name="areas" xsi:type="array">
                <item name="meme" xsi:type="array">
                    <item name="frontName" xsi:type="null" />
                    <item name="router" xsi:type="string">standard</item>
                </item>
            </argument>
            <argument name="default" xsi:type="string">meme</argument>
        </arguments>
    </type>
</config>
